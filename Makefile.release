include Makefile

RELEASE_NAME = libft_release
RELEASE_SRCS = $(filter-out $(TEST_SRCS), $(SRCS))
RELEASE_OBJS = $(RELEASE_SRCS:.c=.o)
ZIP_FILES = Makefile libft.h $(RELEASE_SRCS)

release: $(RELEASE_OBJS)
	$(AR) $(ARFLAGS) $(RELEASE_NAME).a $(RELEASE_OBJS)
	zip $(RELEASE_NAME).zip $(ZIP_FILES) $(RELEASE_NAME).a

clean_release:
	rm -f $(RELEASE_OBJS) $(RELEASE_NAME).a $(RELEASE_NAME).zip

.PHONY: release clean_release
